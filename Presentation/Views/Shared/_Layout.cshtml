@using System.Security.Claims
@using Domain.Constant
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Auction Buyer</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <link rel="stylesheet" href="~/css/buyer.css" />
    
</head>
<body style="background: linear-gradient(120deg, #43C6DB, #AB7AE7 80%); min-height: 100vh;">
    @Html.Partial("_HeaderBuyer")
    <div class="container-buyer">
        @Html.Partial("_SidebarBuyer")
        <main class="main-content">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <span>© 2025 Auction Platform. All rights reserved.</span>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
