@{
    var isSeller = User.IsInRole("SELLER"); // Cách phổ biến nhất
}
<header class="buyer-header d-flex align-items-center justify-content-between px-4 py-2" style="background: #fff; box-shadow: 0 2px 8px #43C6DB22;">
    <div class="logo fw-bold" style="font-size:2rem; color:#43C6DB">AUCTION</div>
@*     <form class="search-box d-flex align-items-center" method="get" action="/Buyer/Search">
        <input type="text" name="q" class="form-control me-2" placeholder="Tìm kiếm sản phẩm đấu giá..." style="border-radius: 20px; width:260px;" />
        <button class="btn btn-outline-primary" type="submit">🔍</button>
    </form> *@
    <div class="header-actions d-flex align-items-center">
        <a class="icon-bell me-3 position-relative" title="Thông báo">
            <i class="bi bi-bell" style="font-size:1.5rem; color:#AB7AE7"></i>
            <!-- Có thể thêm badge số thông báo nếu muốn -->
        </a>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://ui-avatars.com/api/?name=@(User.Identity.Name)&background=43C6DB&color=fff&size=64" class="avatar me-2" alt="avatar" style="width:36px; border-radius:50%;">
                    <span>@User.Identity.Name</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                    @if(isSeller){
                        <li><a class="dropdown-item" href="/Seller/Home"><i class="bi bi-shop me-2"></i>Seller Center</a></li>
                    }
                    <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-bag-check me-2"></i>Profile</a></li>
                    @* <li><a class="dropdown-item" href="/Buyer/Topup"><i class="bi bi-credit-card-2-front me-2"></i>Nạp tiền</a></li> *@
                    <li><a class="dropdown-item" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                </ul>
            </div>
        }
        else
        {
            <a href="/Account/Login" class="btn btn-outline-success me-2">Đăng nhập</a>
            <a href="/Account/Register" class="btn btn-warning">Đăng ký</a>
        }
    </div>
</header>
