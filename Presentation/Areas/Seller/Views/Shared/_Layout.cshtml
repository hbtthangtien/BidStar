<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Seller Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/seller.css" />
</head>
<body style="background: #f8faff">
    <!-- Header -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background:linear-gradient(90deg,#1976d2 70%,#AB7AE7)">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="/Seller/Index" style="font-size:1.8rem">
                <i class="bi bi-shop-window me-2"></i>SELLER DASHBOARD
            </a>
            <div class="d-flex">
               
                <div class="dropdown">
                    <a class="text-white text-decoration-none dropdown-toggle" href="#" id="sellerMenu" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i>
                        @((User.Identity.IsAuthenticated ? User.Identity.Name : "Tài khoản"))
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="/Home/Index">
                                <i class="bi bi-house-door-fill me-1"></i>Về trang Buyer
                            </a>
                        </li>
                        <li><a class="dropdown-item" href="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i>Đăng xuất</a></li>
                        
                    </ul>

                </div>
            </div>
        </div>
    </nav>
    <!-- Main layout -->
    <div class="d-flex" style="min-height:90vh">
        <!-- Sidebar -->
        <aside class="seller-sidebar p-0" style="width:230px;background:linear-gradient(120deg,#1976d2,#AB7AE7)">
            <nav class="nav flex-column py-4 h-100">
                <a class="nav-link text-white mb-2 fw-semibold" href="/Seller/Home">
                    <i class="bi bi-speedometer2 me-2"></i>Dashboard
                </a>
                <a class="nav-link text-white mb-2 fw-semibold" href="/Seller/Product">
                    <i class="bi bi-box-seam me-2"></i>Quản lý sản phẩm
                </a>
                <a class="nav-link text-white mb-2 fw-semibold" href="/Seller/AuctionSession">
                    <i class="bi bi-hammer me-2"></i>Quản lý đấu giá
                </a>
                <a class="nav-link text-white mb-2 fw-semibold" href="/Seller/Orders">
                    <i class="bi bi-card-checklist me-2"></i>Đơn hàng đã bán
                </a>
                <hr class="text-white opacity-50" />
               
            </nav>
        </aside>
        <!-- Main content -->
        <main class="flex-fill p-4" style="background:#f8faff">
            @RenderBody()
        </main>
    </div>
    <footer class="text-center py-3 bg-white border-top text-secondary small">
        © 2025 Auction Platform. Seller Portal.
    </footer>
    <!-- Chỉ để lại 1 bản Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>
