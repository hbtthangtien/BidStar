@{
    ViewData["Title"] = "Seller Dashboard";
}
<h2 class="fw-bold mb-4" style="color:#1976d2">Chào mừng @User.Identity.Name đến trang Seller!</h2>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card shadow h-100 border-0">
            <div class="card-body text-center">
                <i class="bi bi-box-seam display-4 text-primary"></i>
                <h5 class="mt-3">Sản phẩm của bạn</h5>
                <p class="lead fw-bold">@ViewBag.ProductCount</p>
                <a href="/Seller/Product" class="btn btn-outline-primary btn-sm">Quản lý sản phẩm</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow h-100 border-0">
            <div class="card-body text-center">
                <i class="bi bi-hammer display-4 text-warning"></i>
                <h5 class="mt-3">Phiên đấu giá</h5>
                <p class="lead fw-bold">@ViewBag.AuctionCount</p>
                <a href="/Seller/AuctionSession" class="btn btn-outline-warning btn-sm">Quản lý đấu giá</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow h-100 border-0">
            <div class="card-body text-center">
                <i class="bi bi-card-checklist display-4 text-success"></i>
                <h5 class="mt-3">Đơn hàng đã bán</h5>
                <p class="lead fw-bold">@ViewBag.OrderCount</p>
                <a href="/Seller/Orders" class="btn btn-outline-success btn-sm">Xem đơn hàng</a>
            </div>
        </div>
    </div>
</div>
